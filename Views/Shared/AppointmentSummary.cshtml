<!--Is a partial view that brings the appointment information in for each available appointment in the signups page-->
@model Tour



<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Day</th>
                <th scope="col">Reserve</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Model.DayTime</th>

                <th>

                    <!--Form so the user can submit information about each property of the appointments (date, time, availability)-->
                    <form id="@Model.TourId" asp-page="/Reserve" method="post">
                        <input type="hidden" asp-for="TourId" />
                        <input type="hidden" asp-for="DayTime" />
                        <input type="hidden" asp-for="Avail" />
                        <span class="card-text p-1">
                            <button type="submit" class="btn-success btn small pull-right" style="float:right">
                                Reserve
                            </button>
                        </span>
                    </form>
                </th>
            </tr>
        </tbody>
    </table>
</div>